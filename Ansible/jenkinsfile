pipeline {
    agent any

    environment {
        PLAYBOOKS = "/etc/ansible/playbooks"
        ANSIBLE_HOST_KEY_CHECKING = "False"
    }

    stages {

        stage('Build WAR File') {
            steps {
                withCredentials([string(credentialsId: 'ansible-vault-pass', variable: 'VAULT_PASS')]) {
                    sh '''
                        echo "$VAULT_PASS" > vault.txt
                        ansible-playbook ${PLAYBOOKS}/build.yml --vault-password-file vault.txt
                        rm -f vault.txt
                    '''
                }
            }
        }

        stage('Run SonarQube Analysis') {
            steps {
                withCredentials([string(credentialsId: 'ansible-vault-pass', variable: 'VAULT_PASS')]) {
                    sh '''
                        echo "$VAULT_PASS" > vault.txt
                        ansible-playbook ${PLAYBOOKS}/test.yml --vault-password-file vault.txt
                        rm -f vault.txt
                    '''
                }
            }
        }

        stage('Upload Artifact to Nexus') {
            steps {
                withCredentials([string(credentialsId: 'ansible-vault-pass', variable: 'VAULT_PASS')]) {
                    sh '''
                        echo "$VAULT_PASS" > vault.txt
                        ansible-playbook ${PLAYBOOKS}/upload.yml --vault-password-file vault.txt
                        rm -f vault.txt
                    '''
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                withCredentials([string(credentialsId: 'ansible-vault-pass', variable: 'VAULT_PASS')]) {
                    sh '''
                        echo "$VAULT_PASS" > vault.txt
                        ansible-playbook ${PLAYBOOKS}/image.yml --vault-password-file vault.txt
                        rm -f vault.txt
                    '''
                }
            }
        }

    }
}
